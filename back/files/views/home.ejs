<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    @import url('https://fonts.googleapis.com/css?family=Muli&display=swap');

    * {
        box-sizing: border-box;
    }


     {
        width: 80%;
        margin: auto;
        background-image: linear-gradient(45deg, #7175da, #9790F2);
        font-family: 'Muli', sans-serif;
        display: flex;
        flex-direction: column;
        min-height: 100vh;

    }

    .course {
        background-color: #fff;
        border-radius: 10px;
        box-shabodydow: 0 10px 10px rgba(0, 0, 0, 0.2);
        display: flex;
        max-width: 100%;
        margin: 20px;
        overflow: hidden;
        width: 700px;
    }

    .course-preview {
        background-color: #2A265F;
        color: #fff;
        padding: 30px;
        width: 300px;
    }

    .course-info {
        padding: 30px;
        position: relative;
        width: 100%;

    }

    .course-info p {
        padding-bottom: 2%;
    }

    .btn {
        text-decoration: none;
        background-color: #2A265F;
        border: 0;
        border-radius: 50px;
        box-shadow: 0 10px 10px rgba(0, 0, 0, 0.2);
        color: #fff;
        font-size: 16px;
        padding: 12px 25px;
        flex-basis: 40%;
        letter-spacing: 1px;
    }

    a {
        text-decoration: none;
        color: white;
    }

    nav ul li {
        display: inline-block;
        margin-left: 20px;
        font-size: 20px;
        text-decoration: underline;
    }

    form input {
        border-radius: 30px;
    }

    form button {
        border-radius: 20px;
        background-color: aqua;
    }

    .searchform {
        position: absolute;
        right: 20px;
    }
    .flex
    {
        display:flex;
        width: 40%;
        justify-content: space-around;
    }
    
</style>

<body>
    <nav>

        <ul>
            <% categories.forEach(element=>{ %>
                <li><a href="/catarticle/<%= element._id%>">
                        <%= element.title%>
                    </a></li>
                <%}) %>

                    <li class="searchform">
                        <form action="/search" method="post">
                            <input type="text" name="search">
                            <button type="submit">Rech√©rche</button>
                        </form>
                    </li>
        </ul>
    </nav>
    <h1><a href="/"> home page</a></h1>
    <div class="flex">
        <a href="/create" class="btn">Create article</a>
        <a href="/category" class="btn" >Create category</a>
    </div>
    <div>
        <% articles.forEach(elem=>{ %>

            <div class="courses-container">
                <div class="course">
                    <div class="course-preview">
                        <span>
                            <%= elem.postedAt %>
                        </span> <span>
                            <%= elem.category.title %>
                        </span>
                        <h4> <a href="/article/<%= elem._id %>">
                                <%= elem.title %>
                            </a></h4>
                    </div>

                    <div class="course-info">
                        <p>
                            <%= elem.content.substr(0,100)+"..." %>
                        </p>
                        <a href="/update/<%= elem._id %>" class="btn">Update</a>
                        <a href="/delete/<%= elem._id %>" class="btn">Delete</a>
                    </div>
                </div>
            </div>


            <% }) %>
    </div>
</body>

</html>